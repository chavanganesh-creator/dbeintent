<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/black"
    android:background="@drawable/list_tab"
    android:layout_margin="10dp"
    android:elevation="6dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/task_id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="#NK12323"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/cli_name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="@string/defaulter_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/task_id"
        android:paddingLeft="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_address"
        android:singleLine="false"
        android:text="Mohit Socity,Shramiknagar, satpur Nashik-07"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cli_name"
        tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cli_description"
            android:text="CCTV Camera Damage"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/task_address"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/task_addbucket"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_add_bucket"
        tools:ignore="MissingConstraints"
        android:outlineAmbientShadowColor="@color/cyan"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintRight_toRightOf="@+id/middle"
        android:layout_marginTop="10dp"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>